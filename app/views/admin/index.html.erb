<div class="flex justify-between flex-wrap mt-8 w-full items-center max-w-4x1">
    <h2 class="text-2x1 text-gray-800 font-medium mb-4">Estatísticas de Venda</h2>
    <div class="flex gap-10 flex-col md:flex-row justify-between w-full">
        <div class="max-w-sm rounded overflow-hidden shadow-lg bg-gradient-to-r from-gray-400 to-gray-300">
            <div class="px-6 py-4">
                <div class="font-bold text-x1 mb-2 text-gray-800">
                    Receita
                </div>
                <p class="text-gray-800" text-base>
                    R$ <%= @quick_stats[:revenue] ? number_to_currency(@quick_stats[:revenue], unit: '', separator: ',', delimiter: '.') : "0" %>
                </p>
            </div>
        </div>
        <div class="max-w-sm rounded overflow-hidden shadow-lg bg-gradient-to-r from-gray-400 to-gray-300">
            <div class="px-6 py-4">
                <div class="font-bold text-x1 mb-2 text-gray-800">
                    Total Vendas
                </div>
                <p class="text-gray-800" text-base>
                    <%= @quick_stats[:sales] ? (@quick_stats[:sales]).to_s : "0" %>
                </p>
            </div>
        </div>
        <div class="max-w-sm rounded overflow-hidden shadow-lg bg-gradient-to-r from-gray-400 to-gray-300">
            <div class="px-6 py-4">
                <div class="font-bold text-x1 mb-2 text-gray-800">
                    Média de Vendas
                </div>
                <p class="text-gray-800" text-base>
                    R$ <%= @quick_stats[:avg_sale] ? number_to_currency(@quick_stats[:avg_sale], unit: '', separator: ',', delimiter: '.') : "0" %>
                </p>
            </div>
        </div>
        <div class="max-w-sm rounded overflow-hidden shadow-lg bg-gradient-to-r from-gray-400 to-gray-300">
            <div class="px-6 py-4">
                <div class="font-bold text-x1 mb-2 text-gray-800">
                    Produtos / Vendas
                </div>
                <p class="text-gray-800" text-base>
                    <%= @quick_stats[:per_sale].to_i %>
                </p>
            </div>
        </div>
    </div>
    <div class="my-8 w-full">
        <h2 class="text-2x1 text-gray-800 font-medium mb-4">Gráfico Receita</h2>
        <div class="w-full" data-controller="dashboard" data-dashboard-revenue-value="<%= @revenue_by_day.to_json %>">
            <canvas id="revenueChart"></canvas>
        </div>
    </div>
</div>
